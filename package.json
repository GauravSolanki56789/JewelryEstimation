{
  "name": "jewelry-estimation",
  "version": "2.0.0",
  "description": "Multi-Tenant Jewelry Estimation Software with Database",
  "author": "Gaurav Softwares",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "node scripts/setup-database.js",
    "fix-gaurav-password": "node scripts/fix-gaurav-password.js",
    "change-master-password": "node scripts/change-master-password.js",
    "migrate-sales-returns": "node migrate-sales-returns.js",
    "setup-env": "node setup-env.js",
    "backup-db": "node scripts/backup-database.js",
    "backup-cloud": "node scripts/cloud-backup.js",
    "restore-db": "node scripts/restore-database.js",
    "sync-db": "node scripts/sync-database.js",
    "electron": "electron .",
    "clean": "powershell -ExecutionPolicy Bypass -File clean-build.ps1",
    "force-clean": "powershell -ExecutionPolicy Bypass -File force-clean.ps1",
    "unlock": "powershell -ExecutionPolicy Bypass -File unlock-file.ps1",
    "build": "electron-builder",
    "build:win": "powershell -ExecutionPolicy Bypass -File build-no-sign.ps1",
    "build:win-simple": "electron-builder --win",
    "rebuild": "npm run clean && npm run build:win",
    "force-rebuild": "npm run force-clean && npm run build:win",
    "build-fresh": "electron-builder --win"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "fast-xml-parser": "^4.3.2",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "18.x"
  },
  "build": {
    "appId": "com.gauravsoftwares.jewelry",
    "productName": "JP Jewellery Estimations",
    "publish": {
      "provider": "github",
      "owner": "YOUR_GITHUB_USERNAME",
      "repo": "YOUR_REPO_NAME"
    },
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "public/**/*",
      "config/**/*",
      "server.js",
      "electron-main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/*.{md,ts,map}",
      "!**/*.md",
      "!.env",
      "!.env.example"
    ],
    "asarUnpack": [
      "config/**/*",
      "server.js",
      "node_modules/bcrypt/**/*",
      "node_modules/pg/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
